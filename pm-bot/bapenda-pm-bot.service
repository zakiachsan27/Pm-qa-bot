[Unit]
Description=Bapenda PM Weekly Report Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/clawdbot-workspace/workspace/projects/Pm-qa-bot/pm-bot
ExecStart=/usr/bin/node index.js --server
Restart=on-failure
RestartSec=10
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
