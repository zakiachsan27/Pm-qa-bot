[Unit]
Description=Bapenda QA Daily Report Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/clawdbot-workspace/workspace/projects/bapenda-qa-bot
ExecStart=/usr/bin/node index.js --cron
Restart=always
RestartSec=10
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
